{
  "name": "gladly-web-interface",
  "version": "1.0.0",
  "description": "Web interface for Gladly conversation testing with Claude API",
  "main": "index.js",
  "scripts": {
    "start": "cross-env PORT=3000 HOST= react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "dev": "concurrently \"npm run start\" \"npm run backend\"",
    "backend": "python app.py",
    "backend:win": "python app.py",
    "backend:unix": "source venv/bin/activate && python app.py"
  },
  "dependencies": {
    "autoprefixer": "^10.4.16",
    "axios": "^1.6.0",
    "lucide-react": "^0.294.0",
    "postcss": "^8.4.31",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^9.0.1",
    "react-scripts": "5.0.1",
    "react-syntax-highlighter": "^15.5.0",
    "remark-gfm": "^4.0.1",
    "tailwindcss": "^3.3.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "proxy": "http://localhost:5000"
}
